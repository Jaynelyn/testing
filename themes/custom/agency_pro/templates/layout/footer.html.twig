<footer class="footer">
   <div class="footer-content dt-section">
      <div class="container">
         <div class="row">
            <div class="col-lg-4 col-md-12 col-12">
               <div class="footer-content-1">
                     {{ page.footer_first }}
               </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12">
               <div class="footer-content-2">
                  {{ page.footer_second }}
               </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12">
               <div class="footer-content-3">
                     {{ page.footer_third }}
               </div>
            </div>
         </div>
      </div>
   </div>
   <div class="copyrights">
      <div class="container">
         <div class="item">
            {% if page.logo %}
               {{page.logo}}
            {% endif %}
            {# {{copyrights}} #}
            <p>{{ copyrights|striptags }} <a href="{{ copyrights_link }}" title="{{ copyrights_text }}" target="_blank">{{ copyrights_text }}</a></p>
         </div>
      </div> 
   </div>
</footer> 