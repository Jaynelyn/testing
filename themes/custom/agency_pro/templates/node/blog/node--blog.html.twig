{# {% include '@agency_pro/node/blog/blog--full.html.twig' %}    #}
{% if content.field_image[0] %}
    <div class="image-section" data-aos="fade-up">
        <img src="{{file_url(content.field_image['#items'].entity.uri.value)}}" alt="{{content.field_image['#items'].alt}}" class="img-fluid">
    </div>
{% endif %}
<div class="blog-content" data-aos="fade-up">
    <div class="content">
        {{ content.field_text_editor }}
        <div class="quote blockquotes-style-1" data-aos="fade-up">
            <div class="item">
                <div>
                    <div class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="67.885" height="54.307" viewBox="0 0 67.885 54.307">
                            <path data-name="Icon metro-quote" d="M76.24,36.794V63.947H49.086V36.794H62.663s0-13.577-13.577-13.577V9.64s27.154,0,27.154,27.154ZM8.355,23.217V9.64s27.154,0,27.154,27.154V63.947H8.355V36.794H21.932S21.932,23.217,8.355,23.217Z" transform="translate(-8.355 -9.64)" fill="#ee8d5a"/>
                        </svg>
                    </div>
                </div>
                {{ content.field_quote.0 }}
            </div>
        </div>
        {{ content.field_body }}
        <div class="blog-type-and-social" data-aos="fade-up">
            <div class="blog-type">
                <div class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22.857" height="32" viewBox="0 0 22.857 32">
                        <path id="path7" d="M6.65,32.344l6.674-5.362a1.926,1.926,0,0,1,2.206,0l6.679,5.362A2.654,2.654,0,0,0,23.855,33a1.844,1.844,0,0,0,.83-.2,2.431,2.431,0,0,0,1.173-2.3V4.54A3.49,3.49,0,0,0,22.429,1h-16A3.49,3.49,0,0,0,3,4.54V30.5a2.43,2.43,0,0,0,1.17,2.3A2.283,2.283,0,0,0,6.65,32.344ZM5.286,4.54A1.162,1.162,0,0,1,6.429,3.36h16a1.164,1.164,0,0,1,1.143,1.18V30.449l-6.638-5.331a4.139,4.139,0,0,0-5.01,0L5.286,30.449Z" transform="translate(-3 -1)" fill="#e53637"/>
                    </svg>
                </div>   
                <h5>{{ content.field_blogs_category.0 }}</h5>
            </div>
            {# {{ content.field_social_media_link }} #}
            {{content.addtoany}}
        </div>
        <div class="flippy" data-aos="fade-up">
            {{ flippy }}
        </div>
        <!-- COMMENTS SECTION STARTS-->
        <div class="comments" data-aos="fade-up">
            <h3>{{comment_count}} Comments</h3>
            {% if comment_count == 0 %}
                <p>No comments to display</p>
                {{ content.field_comments }}
            {% else %}
                {{ content.field_comments }}
            {% endif %}
            {% if logged_in ==  false %}
                <div class="login-register">
                    <nav class="comment-login">{{ content.links }}</nav>
                </div>
            {% endif %}
        </div>
        <!-- COMMENTS SECTION ENDS-->
    </div>
</div>