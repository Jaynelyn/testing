<section id="cta" class="contact-style-1-who-we-are dt-section">
    <div class="container">
        <div class="item">
            {% if content.field_title.0 %}
                <h2>{{ content.field_title.0 }}</h2>
            {% endif %}
            {% if content.field_description.0 %}
                {{ content.field_description.0 }}
            {% endif %}
            {% if content.field_link.0 %}
                <a href="{{ content.field_link.0['#url'] }}" class="btn btn-primary btn-style-1 btn-style-lg" title="{{ content.field_link.0['#title'] }}">{{ content.field_link.0['#title'] }}</a>
            {% endif %}
        </div>
    </div>
</section>