<div class="dt-section" data-aos="fade-up">
    <div class="blog-2">
        <div class="container">
            {% if content.field_title.0 %}
                <div class="home-2-title">
                    <h2>{{ content.field_title.0 }}</h2>
                </div>
            {% endif %}
            {{ content.field_blogs }}
            {% if content.field_read_more.0 %}
                <div class="btn-center">
                    <a href="{{ content.field_read_more.0['#url'] }}" class="btn btn-primary btn-style-1 btn-style-lg" title="{{ content.field_read_more.0['#title'] }}">{{ content.field_read_more.0['#title'] }}</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
