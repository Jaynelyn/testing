{% set paragraph_parent = paragraph.getParentEntity() %}
{% set variant = paragraph_parent.field_progress_bar_variant.value %}
{% if variant in 'list-style' %}
    <div class="item"  data-aos="fade-up">
        <div class="progress-bar-head">
            <h6>{{ content.field_title.0 }}</h6>
            <h6>{{ content.field_count.0 }}%</h6>
        </div>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: {{ content.field_count.0 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
               
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12 col-md-6">
        <div class="contain" data-aos="fade-down" data-aos-anchor-placement="bottom-bottom">
            <div class="value circular-progress-{{delta}}">
            <div class="value-container-{{delta}}">{{ content.field_count.0 }}</div>
            </div>
            <h5>{{ content.field_title.0 }}</h5>
        </div>
    </div>      
    <script>
        let progressBar{{delta}} = document.querySelector(".circular-progress-{{delta}}");
        let valueContainer{{delta}} = document.querySelector(".value-container-{{delta}}");

        let progressValue{{delta}} = 0;
        let progressEndValue{{delta}} = {{ content.field_count.0 }};
        let speed{{delta}} = 50;

        let progress{{delta}} = setInterval(() => {
        progressValue{{delta}}++;
        valueContainer{{delta}}.textContent = `${progressValue{{delta}}}%`;
        progressBar{{delta}}.style.background = `conic-gradient(
            var(--primary-color) ${progressValue{{delta}} * 3.6}deg,
            #F2E9E1 ${progressValue{{delta}} * 3.6}deg
        )`;
        if (progressValue{{delta}} == progressEndValue{{delta}}) {
            clearInterval(progress{{delta}});
        }
        }, speed{{delta}});
    </script>

    
{% endif %}