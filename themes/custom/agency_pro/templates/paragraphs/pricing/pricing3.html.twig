<section class="dt-section pricing-3-bg-img" style="background-image: url('{{ content.field_background_image.0 }}');" data-aos="fade-up">
    <div class="pricing-3">
        <div class="container">
            {% if content.field_tagline.0 or content.field_title.0 %}
                <div class="home-3-title">
                    {% if  content.field_tagline.0 %}
                        <span>{{ content.field_tagline.0 }}</span>
                    {% endif %}
                    <h2>{{ content.field_title.0 }}</h2>
                    <hr>
                </div>
            {% endif %}
            <div class="pricing-style-3">
                <div class="row justify-content-center">
                   {{ content.field_pricing_details }}
                </div>
            </div>
        </div>
    </div>
</section>