<section class="career-page dt-section">
  <div class="container">
    {% if content.field_tagline.0 or content.field_title.0 %}
      <div class="pages-1-title">
        {% if content.field_tagline.0 %}
            <span>{{ content.field_tagline.0 }}</span>
            <h2>{{ content.field_title.0 }}</h2>
        {% endif %}
      </div>
    {% endif %}
      <div class="image">
          <img class="img-fluid" src="{{ file_url(content.field_image['#items'].entity.uri.value)}}" alt="{{ content.field_image['#items'].alt }}" title="{{ content.field_image['#items'].title }}">
      </div>
      <div class="accordion opening-lists" id="{{ paragraph.bundle() }}">
          {{ content.field_panel_content }}
      </div>
  </div>
</section>