<nav class="pagination-btns">
  <ul class="pagination">
   {% if items.previous %}
      <li class="page-item pager__item pager__item--previous">
        <a href="{{ items.previous.href }}" class="page-link" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
          <span class="visually-hidden">{{ 'Previous page'|t }}</span>
          <span aria-hidden="true">{{ items.previous.text|default('‹ Previous'|t) }}</span>
        </a>
      </li>
    {% endif %}
    {% for key, item in items.pages %}
      <li class="page-item pager__item{{ current == key ? ' is-active' : '' }}">
        {% if current == key %}
          {% set title = 'Current page'|t %}
        {% else %}
          {% set title = 'Go to page @key'|t({'@key': key}) %}
        {% endif %}
        <a href="{{ item.href }}" class="page-link {{key}}" title="{{ title }}"{{ item.attributes|without('href', 'title') }}>
          <span class="visually-hidden">
            {{ current == key ? 'Current page'|t : 'Page'|t }}
          </span>
          {{- key -}}
        </a>
      </li>
    {% endfor %}
    {% if items.next %}
      <li class="page-item pager__item pager__item--next">
        <a href="{{ items.next.href }}" class="page-link" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
          <span class="visually-hidden">{{ 'Next page'|t }}</span>
          <span aria-hidden="true">{{ items.next.text|default('Next ›'|t) }}</span>
        </a>
      </li>
    {% endif %}
  </ul>
</nav>
